<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/clLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#212121"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:src="@drawable/avatar"
                    android:textColor="@color/colorPrimary"
                    tools:civ_border_color="@color/colorPrimaryDark"
                    tools:civ_border_width="2dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/llPatient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.healthexpert.ui.widgets.BaseTextView
                            android:id="@+id/tvFullName"
                            style="@style/PrimaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.healthexpert.ui.widgets.BaseTextView
                            android:id="@+id/tvAddress"
                            style="@style/SecondaryText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.healthexpert.ui.widgets.BaseTextView
                            android:id="@+id/tvDob"
                            style="@style/TertiaryText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.healthexpert.ui.widgets.BaseTextView
                                style="@style/PrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/height" />

                            <com.healthexpert.ui.widgets.BaseTextView
                                android:id="@+id/tvHeight"
                                style="@style/SecondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.healthexpert.ui.widgets.BaseTextView
                                style="@style/PrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/weight" />

                            <com.healthexpert.ui.widgets.BaseTextView
                                android:id="@+id/tvWeight"
                                style="@style/SecondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.healthexpert.ui.widgets.BaseTextView
                                style="@style/PrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/occupation" />

                            <com.healthexpert.ui.widgets.BaseTextView
                                android:id="@+id/tvOccupation"
                                style="@style/SecondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.healthexpert.ui.widgets.BaseTextView
                                style="@style/PrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_no" />

                            <com.healthexpert.ui.widgets.BaseTextView
                                android:id="@+id/tvPhoneno"
                                style="@style/SecondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.healthexpert.ui.widgets.BaseTextView
                                style="@style/PrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/history" />

                            <com.healthexpert.ui.widgets.BaseTextView
                                android:id="@+id/tvHistory"
                                style="@style/SecondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.healthexpert.ui.widgets.BaseTextView
                                style="@style/PrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/blood_group" />

                            <com.healthexpert.ui.widgets.BaseTextView
                                android:id="@+id/tvBloodGroup"
                                style="@style/SecondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>


                    <com.healthexpert.ui.widgets.BaseTextView
                        style="@style/PrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/investigations" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        android:id="@+id/tvInvestigations"
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        style="@style/PrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mother_name" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        android:id="@+id/tvMname"
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        style="@style/PrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mother_s_symptom" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        android:id="@+id/tvMSymptoms"
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        style="@style/PrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/father_s_name" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        android:id="@+id/tvFname"
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        style="@style/PrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/father_s_symptom" />

                    <com.healthexpert.ui.widgets.BaseTextView
                        android:id="@+id/tvFSymptoms"
                        style="@style/SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <com.getbase.floatingactionbutton.FloatingActionsMenu
                    android:id="@+id/fabMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/star_outline"
                    android:tag="99"
                    sothree:fab_addButtonColorNormal="@color/colorPrimary"
                    sothree:fab_addButtonColorPressed="@color/colorPrimaryDark"
                    sothree:fab_colorNormal="@color/colorPrimary"
                    sothree:fab_colorPressed="@color/colorPrimaryDark"
                    sothree:fab_labelStyle="@style/menu_labels_style"
                    sothree:fab_labelsPosition="left">

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        sothree:fab_colorNormal="@color/colorPrimary"
                        sothree:fab_colorPressed="@color/colorPrimaryDark"
                        sothree:fab_icon="@drawable/summary_small"
                        sothree:fab_size="mini"
                        sothree:fab_title="@string/patient_summary" />

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabPredict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        sothree:fab_colorNormal="@color/colorPrimary"
                        sothree:fab_colorPressed="@color/colorPrimaryDark"
                        sothree:fab_icon="@drawable/predict_small"
                        sothree:fab_size="mini"
                        sothree:fab_title="@string/predict_disease" />

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabPrescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        sothree:fab_colorNormal="@color/colorPrimary"
                        sothree:fab_colorPressed="@color/colorPrimaryDark"
                        sothree:fab_icon="@drawable/prescription_small"
                        sothree:fab_size="mini"
                        sothree:fab_title="@string/add_prescription" />

                </com.getbase.floatingactionbutton.FloatingActionsMenu>

            </RelativeLayout>


        </LinearLayout>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/star_outline"
            android:tag="99"
            sothree:fab_colorNormal="@color/colorPrimary"
            sothree:fab_colorPressed="@color/colorPrimaryDark"
            sothree:layout_anchor="@id/viewA"
            sothree:layout_anchorGravity="bottom|right|end" />


    </android.support.design.widget.CoordinatorLayout>

</ScrollView>

